<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    card_view:cardElevation="@dimen/cardview_default_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/list_item_release_thumb_image_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/list_item_release_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/list_item_release_thumb_image_view"
                android:padding="4dp"
                android:textStyle="bold"
                tools:text="Release Title"/>

            <TextView
                android:id="@+id/list_item_release_artist_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_release_title_text_view"
                android:layout_toRightOf="@id/list_item_release_thumb_image_view"
                android:padding="4dp"
                tools:text="Release Artist"/>

            <TextView
                android:id="@+id/list_item_release_year_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_release_artist_text_view"
                android:layout_toRightOf="@id/list_item_release_thumb_image_view"
                android:padding="4dp"
                tools:text="Release Year"/>

            <TextView
                android:id="@+id/list_item_release_genre_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_release_year_text_view"
                android:layout_toRightOf="@id/list_item_release_thumb_image_view"
                android:padding="4dp"
                tools:text="Release Genre"/>

            <TextView
                android:id="@+id/list_item_release_format_info_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_release_genre_text_view"
                android:layout_toRightOf="@id/list_item_release_thumb_image_view"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                tools:text="Format Info"/>

        </RelativeLayout>

</android.support.v7.widget.CardView>


