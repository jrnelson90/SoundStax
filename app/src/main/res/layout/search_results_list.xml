<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Spinner
        android:id="@+id/release_genre_filter_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:padding="4dp"
        android:textAlignment="gravity"/>

    <TextView
        android:id="@+id/release_genre_filter_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/release_genre_filter_spinner"
        android:layout_toStartOf="@id/release_genre_filter_spinner"
        android:padding="4dp"
        android:text="@string/genre_filter_label"/>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/release_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/release_genre_filter_spinner"/>

</RelativeLayout>