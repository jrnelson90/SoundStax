<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.justinrandalnelson.waxstacks">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/vinyl_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".DashboardActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <activity android:name=".LoginSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN">
                </action>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.justinrandalnelson.waxstacks.ReleaseActivity"
            android:parentActivityName="com.justinrandalnelson.waxstacks.DashboardActivity">
        </activity>

        <activity
            android:name="com.justinrandalnelson.waxstacks.AuthPageActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName="com.justinrandalnelson.waxstacks.LoginSplashActivity">
        </activity>
        <activity
            android:name=".LoadingSplashActivity">
        </activity>

        <activity
            android:name=".SearchResultsActivity"
            android:parentActivityName=".DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>
    </application>

</manifest>